{
  "name": "tandem",
  "version": "10.0.0",
  "private": true,
  "description": "Aerial is a virtual browser for visually creating web applications.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crcn/aerial.git"
  },
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "test": "gulp test",
    "precommit": "lint-staged",
    "design-front-end": "cd packages/front-end; tandem .",
